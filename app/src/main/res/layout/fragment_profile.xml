<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profil Fotoğrafı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/c3"
                android:src="@drawable/ic_profile_placeholder" />

            <Button
                android:id="@+id/changePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotoğrafı Değiştir"
                android:textColor="@color/c4"
                android:backgroundTint="@color/c2"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adınız:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adınızı girin"
                android:textColor="@color/c4"
                android:textColorHint="@color/c3" />
        </LinearLayout>

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Adı:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kullanıcı adınızı girin"
                android:textColor="@color/c4"
                android:textColorHint="@color/c3"/>
        </LinearLayout>

        <!-- Gender -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinsiyet:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yaşınız:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <Spinner
                android:id="@+id/ageSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilonuz:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <Spinner
                android:id="@+id/weightSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boyunuz:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <Spinner
                android:id="@+id/heightSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-posta:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-posta adresinizi girin"
                android:inputType="textEmailAddress"
                android:textColor="@color/c4"
                android:textColorHint="@color/c3"
                android:layout_marginTop="8dp"
                android:enabled="false"
                android:minHeight="48dp"
                android:padding="12dp" />

        </LinearLayout>

        <!-- About EditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hakkınızda:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/c3"
                android:layout_marginTop="4dp" />

            <EditText
                android:id="@+id/aboutEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kendiniz hakkında kısa bir bilgi verin"
                android:inputType="textMultiLine"
                android:textColor="@color/c4"
                android:textColorHint="@color/c3"
                android:lines="4"
                android:gravity="top"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Change Password Button -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Şifreyi Değiştir"
            android:layout_marginTop="16dp"
            android:textColor="@color/c4"
            android:backgroundTint="@color/c2"
            android:padding="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Kaydet"
            android:layout_marginTop="8dp"
            android:textColor="@color/c4"
            android:backgroundTint="@color/c2"
            android:padding="16dp" />


    </LinearLayout>
</ScrollView>

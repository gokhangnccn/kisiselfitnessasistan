<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/tv_routine_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rutin Adı"
        android:textColor="@color/c3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkbox_select_routine"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_select_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_routine_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_routine_name"
        android:buttonTint="@color/c1" />

    <TextView
        android:id="@+id/tv_routine_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:textColor="@color/c1"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_routine_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start_routine"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_start_routine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rutini Başlat"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_light"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/tv_routine_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

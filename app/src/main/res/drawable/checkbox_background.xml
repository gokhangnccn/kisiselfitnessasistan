<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/c3"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/c3"/>
            <corners android:radius="4dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/c2"/>
        </shape>
    </item>
</selector>

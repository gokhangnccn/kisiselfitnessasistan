<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/c3</item>
    </style>
    <style name="CustomAlertDialogTheme.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/x1</item>
        <!-- Message text color -->
        <item name="android:textColor">@color/x1</item>
        <!-- Button text color -->
        <item name="colorAccent">@color/x3</item>
        <!-- Background color -->
        <item name="android:background">@color/x2</item>
        <!-- Background color for AppCompatDialog -->
        <item name="android:windowBackground">@color/x2</item>
    </style>


    <!-- styles.xml -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/x4</item>
        <item name="android:textColorHint">@color/x4</item>
        <item name="hintTextColor">@color/x1</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/x4</item>
        <item name="android:textColorHint">@color/x3</item>
        <item name="android:backgroundTint">@color/x2</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Active Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyleActive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/c3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Inactive Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyleInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/c2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>